<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AddtoBudgetExpense"
    android:background="@drawable/signin_background">

    <Button
        android:id="@+id/IndividualEx"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_button01"
        android:text="@string/individualExpense"
        android:gravity="center"/>

    <Button
        android:id="@+id/FamilyEx"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_button01"
        android:text="@string/family"
        android:gravity="center"/>

    <Button
        android:id="@+id/EventEx"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_button01"
        android:text="@string/event"
        android:gravity="center"/>









</LinearLayout>