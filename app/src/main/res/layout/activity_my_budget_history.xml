<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Expenses"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/signin_background">

    <Button
        android:id="@+id/individualBudget"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@drawable/my_button"
        android:text="Individual Budget"
        android:gravity="center"/>

    <Button
        android:id="@+id/familyBudget"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_button"
        android:text="Family Budget"
        android:gravity="center"/>

    <Button
        android:id="@+id/eventBudget"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_button"
        android:text="Event Budget"
        android:gravity="center"/>




</LinearLayout>